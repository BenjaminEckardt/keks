{
    "manifest_version": 2,

    "name": "keks",
    "description": "Repeatable hijacking and transformation of cookies.",
    "version": "1.0.0",

    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "cockpit.html"
    },

    "background": {
        "scripts": ["js/change-listener.js"],
        "persistent": false
    },

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "permissions": [
        "cookies",
        "storage",
        "<all_urls>"
    ]
}
